<Window x:Class="ArcadeManager.Forms.Win_About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArcadeManager.Forms"
        mc:Ignorable="d"
        Title="Project Arcade Manager" Height="263" Width="775" WindowStyle="None" AllowsTransparency="True"
        Opacity="100"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Icon="/ArcadeManager;component/Logo.ico"
        MouseDoubleClick="Window_MouseDoubleClick">
    <Window.Resources>
        <Storyboard x:Key="FadeIn">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0.5" To="1.0"/>
        </Storyboard>
        <Storyboard x:Key="FadeOut">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:2" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0.5" To="0.0"/>
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Label Content="Misaka Castle's Project &quot;Utility Works&quot;" FontFamily="Segoe Script" FontSize="14px" Foreground="Green"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Image x:Name="ptbx_logo" HorizontalAlignment="Left" Height="64" VerticalAlignment="Top" Width="64" Margin="109,51,0,0" Source="/ArcadeManager;component/Logo.ico" Stretch="Fill"/>
        <Label Content="Project Arcade Manager" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="228,51,0,0" Width="396"
               FontFamily="Comic Sans MS" FontSize="25pt" Foreground="SkyBlue"/>
        <Label Content="(C)Copyright 2018-2021 Misaka Castle Group. All rights reserved.&#xD;&#xA;Inspired by Arcade (Original made by Schwarzer)&#xD;&#xA;&quot;Arcaea(TM)&quot; is a trademark of Lowiro Limited." HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Fuchsia" Margin="6,202,0,0"/>
        <Label x:Name="lbl_ver" Content="v0.1.0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="681,228,0,0" Width="69" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
        <TextBlock Text="Github项目页" HorizontalAlignment="Left" Foreground="#0000cc" Margin="634,10,0,0" Width="116" TextDecorations="Underline" Height="23" FontSize="13"
                   MouseDown="TextBlock_MouseDown" TextAlignment="Center" VerticalAlignment="Top"/>

    </Grid>
</Window>